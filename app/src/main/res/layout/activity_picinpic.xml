<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/pic_root_view">

    <RelativeLayout
        android:id="@+id/pic_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/pic_top_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ff0000"/>
        <View
            android:id="@+id/pic_center_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:background="#00ff00"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/test_webp_img"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="81dp"/>

        <Button
            android:id="@+id/webp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testWebp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="test webp"/>
    </RelativeLayout>

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="#0000ff"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PicInPic"
        android:layout_centerVertical="true"
        android:onClick="picinpic"/>
</RelativeLayout>